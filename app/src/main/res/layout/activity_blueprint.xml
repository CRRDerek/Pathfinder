<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="edu.calvin.cs262.prototype.activities.BlueprintActivity">

    <GridLayout
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:rowCount="3"
        android:columnCount="1">

        <WebView
            android:layout_width="match_parent"
            android:layout_height="350dp"
            android:id="@+id/webView"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:adjustViewBounds="false"
            android:layout_gravity="top"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:longClickable="false"
            android:nestedScrollingEnabled="true"
            android:layout_row="0"
            android:layout_column="0" />

        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:rowCount="2"
            android:columnCount="3"
            android:orientation="horizontal"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_gravity="center_horizontal">

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:onClick="onRadioButtonClicked"
                android:id="@+id/floor0bttn"
                android:nestedScrollingEnabled="false" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"
                android:id="@+id/floor1bttn"
                android:onClick="onRadioButtonClicked"
                android:checked="true" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2"
                android:onClick="onRadioButtonClicked"
                android:id="@+id/floor2bttn" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3"
                android:onClick="onRadioButtonClicked"
                android:id="@+id/floor3bttn" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4"
                android:onClick="onRadioButtonClicked"
                android:id="@+id/floor4bttn" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5"
                android:onClick="onRadioButtonClicked"
                android:id="@+id/floor5bttn" />

        </RadioGroup>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Map"
            android:id="@+id/mapBttn"
            android:layout_row="2"
            android:layout_column="0"
            android:layout_gravity="center_horizontal" />

    </GridLayout>
</RelativeLayout>
